{
  "manifest_version": 2,

  "name": "WebNotes",
  "description": "Create notes instantly while browsing the web.",
  "author": "Parth Bhardwaj",
  "version": "1.0",
  "background":{
    "scripts":["background.js"],
    "persistent":false
  },
  "browser_action": {
   "default_popup": "popup.html"
  },
  "commands": {
   "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+U",
        "mac": "Command+Shift+Space",
        "chromeos": "Ctrl+Shift+U",
        "linux": "Ctrl+Shift+U"
      }
    }
  },
  "permissions": [
   "tabs"
   ]
  
}